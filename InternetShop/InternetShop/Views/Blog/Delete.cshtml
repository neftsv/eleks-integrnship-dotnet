@model InternetShop.Models.BlogPost

@{
    ViewBag.Title = "Delete Post";
}

<!DOCTYPE html>
<html>
<head>
    <title>Delete Post</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <div class="border p-3">
        <h2 class="mb-4">Delete Post</h2>

        <p class="mb-4">Are you sure you want to delete this post?</p>

        <div>
            <h4>Title: @Model.Title</h4>
            <div>
                @Model.Content
            </div>
        </div>

        <form asp-action="Delete" asp-controller="Blog" asp-route-id="@Model.Id" method="post" class="text-center mt-3">
            <div>
                <button type="submit" class="btn btn-warning text-white mr-2">Delete</button>
                <a href="@Url.Action("Index", "Blog")" class="btn btn-warning text-white">Back</a>
            </div>
        </form>
    </div>
</div>
</body>
</html>
