@model List<InternetShop.Models.BlogPost>

@{
    ViewBag.Title = "Blog";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4" style="font-family: 'Arial Black', sans-serif; color: #333;">Welcome to Our Amazing Blog</h1>
            <div class="row">
                @foreach (var post in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card" style="background-color: #EDDEA4; border: none;">
                            <div class="card-body">
                                <h5 class="card-title" style="font-family: 'Georgia', serif; font-size: 1.2rem; color: #333;">@post.Title</h5>
                                <div style="border: 1px solid #ccc; text-align: center;">
                                    <img src="@Url.Content($"~/BlogImages/{post.image}")" style="width:365px; height:230px" />
                                </div>
                                <p class="card-text" style="color: #555;">
                                    @post.Content.Substring(0, Math.Min(100, @post.Content.Length))
                                    @if (post.Content.Length > 100)
                                    {
                                        <span style="color: #888;">...</span>
                                    }
                                </p>
                                <p class="card-text" style="font-size: 0.8rem; color: #888;">
                                    <small>Published on @post.CreatedAt.ToString("MMMM dd, yyyy", System.Globalization.CultureInfo.CreateSpecificCulture("en")) by @post.Author</small>
                                </p>
                                <div class="text-center">
                                    <a href="@Url.Action("Edit", "Blog", new { id = post.Id })" class="btn or-button btn-sm or-register btn-button-btn text-white">Edit</a>
                                    <a href="@Url.Action("Details", "Blog", new { id = post.Id })" class="btn or-button btn-sm or-register btn-button-btn text-white">Details</a>
                                    <a href="@Url.Action("Delete", "Blog", new { id = post.Id })" class="btn or-button btn-sm or-register btn-button-btn text-white">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("Create", "Blog")" class="btn btn-lg btn-warning btn-create-btn text-white" style="font-family: 'Arial', sans-serif;">Create New Post</a>
            </div>
        </div>
    </div>
</div>
