@model InternetShop.Models.Users

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-4 col-md-6 rounded p-4">
            <h4 class="text-center mb-3" id="registration-heading">Edit user</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group form-group-edit row mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group form-group-edit row mb-3">
                    <input asp-for="Surname" class="form-control" placeholder="Surname" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group form-group-edit row mb-3">
                    <input asp-for="Patronimic" class="form-control" placeholder="Patronimic" />
                    <span asp-validation-for="Patronimic" class="text-danger"></span>
                </div>

                <div class="form-group form-group-edit row mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group form-group-edit row mb-3">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-register" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}