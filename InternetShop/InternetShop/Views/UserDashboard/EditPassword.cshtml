@model InternetShop.Models.Users

@{
    ViewData["Title"] = "EditPassword";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <div class="input-group password-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="passwordField" />
                    <div class="input-group-text">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" onclick="togglePasswordVisibility()" id="showPasswordCheckbox">
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input id="passwordConfirmation" name="passwordConfirmation" type="password" class="form-control" placeholder="Confirm Password" />
                <span class="text-danger" id="confirmPasswordError"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Back to UserPage</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}